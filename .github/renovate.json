{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "automerge": true,
  "packageRules": [
     {
       "groupName": "opentelemetry-python monorepo",
       "matchSourceUrls": [ "https://github.com/open-telemetry/opentelemetry-python", "https://github.com/open-telemetry/opentelemetry-python-contrib" ],
       "ignoreUnstable": false
     }
  ]
}
